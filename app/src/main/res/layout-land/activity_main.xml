<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87C4CB"
    android:backgroundTint="#87C4CB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="?android:backgroundTint"
        android:baselineAligned="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/uma_bomba_de_gasolina_ilustrando_o_app"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@mipmap/ic_launcher_foreground" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:autoSizeTextType="uniform"
                android:text="@string/gasolina_ou_lcool"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="3"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edAlcool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="numberDecimal"
                android:ems="10"
                android:hint="@string/pre_o_do_alcool"
                android:inputType="numberDecimal"
                android:padding="20dp" />

            <EditText
                android:id="@+id/edGasolina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="numberDecimal"
                android:ems="10"
                android:hint="@string/pre_o_da_gasolina"
                android:inputType="numberDecimal"
                android:padding="20dp" />

            <Switch
                android:id="@+id/swPercentual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:padding="16dp"
                android:text="@string/_75"
                tools:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <Button
                android:id="@+id/btCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#732921"
                android:text="@string/calcular" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>